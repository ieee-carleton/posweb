{%extends "base.jinja2" %}
{%block title %}Login{% endblock %}
{% block content %}
<div class="row">
<div class="col-md-4 col-md-offset-4">
      <form class="form-signin" role="form" method="post">
        <h2 class="form-signin-heading">Please sign in</h2>
        <input type="hidden" name="came_from" value="{{came_from}}"/>
        <input type="text"   name="login" class="form-control top-padded" placeholder="IEEE Office Username" value="{{ login }}" required autofocus>
        <input type="password" name="password" class="form-control" placeholder="Password" value="{{ password }}" required>
        <div class="col-sm-8 col-sm-offset-2 top-padded">
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block form-control" type="submit" name="form.submitted">Sign in</button>
        </div>
        </div>
      </form>
</div>
<h5>{{message}}</h5>

</div>
{% endblock %}